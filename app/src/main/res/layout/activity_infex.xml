<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:baselineAligned="false">

  <Button android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="cameraAuto"
      android:id="@+id/camera_default"/>

  <Button android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="camera1"
      android:id="@+id/camera1_default"/>

  <Button android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="camera2"
      android:id="@+id/camera2_default"/>

  <Button android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="google_camera2"
      android:id="@+id/google_camera"/>

  <Button android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="VCamera"
      android:id="@+id/vcamera"/>

  <Button android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="PG_SDK_Camera"
      android:id="@+id/pg_vcamera"/>
  <Button android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="imagelist"
      android:id="@+id/imagelist"/>

  <RadioGroup android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:id="@+id/rg_tuya">
    <RadioButton android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:id="@+id/tuya_one"
                 android:text="tuya1"/>
    <RadioButton android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tuya_tow"
        android:text="tuya2"/>
  </RadioGroup>
  <RadioGroup android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:id="@+id/rg_camera">
    <RadioButton android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/camera_system"
        android:text="syscamera"/>
    <RadioButton android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/camera_one"
        android:text="camera1"/>
    <RadioButton android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/camera_tow"
        android:text="camera2"/>
  </RadioGroup>

  <TextView android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tag_info"/>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/scratch_title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:padding="15dp"
                android:text="版本号："
                android:textColor="@android:color/black"
                android:textSize="15sp" />

            <com.cooltechworks.views.ScratchTextView
                android:id="@+id/tv_scratch"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center|end"
                android:paddingBottom="10dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingTop="10dp"
                android:text="Test"
                android:textSize="15sp"
                android:textStyle="bold" />
        </LinearLayout>


    </android.support.v7.widget.CardView>


</LinearLayout>